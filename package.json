{
  "name": "crm-monorepo",
  "private": true,
  "workspaces": [
    "services/*"
  ],
  "scripts": {
    "k8s:apply": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "k8s:restart": "kubectl rollout restart deployment/crm-app",
    "k8s:status": "kubectl get pods,svc,ingress",
    "k8s:logs": "kubectl logs -l app=crm-app --tail=100 -f"
  }
}
